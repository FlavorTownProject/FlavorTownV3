<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.ua.edu.flavortown.MainActivity"
    android:layout_height="match_parent">

    <Button
        android:text="History"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/historyButton"
        tools:text="History"
        android:foregroundGravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Top 10 Food Items"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/top10Button"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/moodButton"
        android:layout_toStartOf="@+id/moodButton"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <Button
            android:text="Mood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/moodButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </GridView>

</RelativeLayout>
